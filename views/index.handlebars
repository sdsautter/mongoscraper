<nav>
    <div class="nav-wrapper">
        <a href="#" class="brand-logo">Raleigh Craig's Pins</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li><a href="/">Home</a></li>
        </ul>
    </div>
</nav>
<div id="wrapper">

    <h3>Raleigh Craigslist Saved Pins</h3>
    <div id="listings" class="row">
        {{#each listings}}
        <div class="col s6 m3">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title"> {{this.date}}</span>
                    <p>{{this.title}}</p>
                    <hr>
                    <p>{{this.price}} {{this.location}}</p>
                </div>
                <div class="card-action">
                    <a href="{{this.link}}">Link</a>
                    <div class="row">
      <div class="col s12">
                    <form method="POST" action="/unsave/{{this._id}}?_method=PUT">
                        <button class="btn waves-effect waves-light unsave-button" type="submit">Unsave
                </button>
                    </form>
      </div>
                    </div>
                    <div class="row">
      <div class="col s12">
                    <a class="waves-effect waves-light btn modal-note" href="#{{this._id}}">Notes</a>

                    <!-- Modal Structure -->
                    <div id="{{this._id}}" class="modal">
                        <div class="modal-content">

                            <h5>{{this.title}}</h5>
                            <form>
                                <input id='titleinput{{this._id}}' name='title' placeholder='Note Title'>
                                <textarea id='bodyinput{{this._id}}' name='body'></textarea>
                                <button data-id='{{this._id}}' class='savenote'>Save Note</button>
                            </form>
                            </div>
                    </div>
                            <div id="{{this._id}}Notes"> </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <div id="notes"></div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.99.0/js/materialize.min.js"></script>
<script src="app.js"></script>